generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Apartment {
  id    String @id
  name  String
  rooms Room[]

  @@map("apartments")
}

model Room {
  id          String    @id
  name        String
  apartment   Apartment @relation(fields: [apartmentId], references: [id])
  apartmentId String    @map("apartment_id")
  tenants     Tenant[]

  @@map("rooms")
}

model Tenant {
  id     String    @id
  name   String
  room   Room      @relation(fields: [roomId], references: [id])
  roomId String    @map("room_id")
  since  DateTime?
  until  DateTime?

  @@map("tenants")
}
